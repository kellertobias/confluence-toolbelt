{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["tools/**/*.ts", "tools/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}

